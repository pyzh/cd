.B
erlang:decode_packet(Type, Bin, Options) ->
.B
                        {ok, Packet, Rest} |
.B
                        {more, Length} |
.B
                        {error, Reason}
.br
.fi
.br
.RS
.LP
Types:

.RS 3
Type = 
.br
    raw |
.br
    0 |
.br
    1 |
.br
    2 |
.br
    4 |
.br
    asn1 |
.br
    cdr |
.br
    sunrm |
.br
    fcgi |
.br
    tpkt |
.br
    line |
.br
    http |
.br
    http_bin |
.br
    httph |
.br
    httph_bin
.br
Bin = binary()
.br
Options = [Opt]
.br
Opt = 
.br
    {packet_size, integer() >= 0} |
.br
    {line_length, integer() >= 0}
.br
Packet = binary() | HttpPacket
.br
Rest = binary()
.br
Length = integer() >= 0 | undefined
.br
Reason = term()
.br
HttpPacket = 
.br
    HttpRequest | HttpResponse | HttpHeader | http_eoh | HttpError
.br
HttpRequest = {http_request, HttpMethod, HttpUri, HttpVersion}
.br
HttpResponse = 
.br
    {http_response, HttpVersion, integer(), HttpString}
.br
HttpHeader = 
.br
    {http_header,
.br
     integer(),
.br
     HttpField,
.br
     Reserved :: term(),
.br
     Value :: HttpString}
.br
HttpError = {http_error, HttpString}
.br
HttpMethod = 
.br
    \&'OPTIONS\&' |
.br
    \&'GET\&' |
.br
    \&'HEAD\&' |
.br
    \&'POST\&' |
.br
    \&'PUT\&' |
.br
    \&'DELETE\&' |
.br
    \&'TRACE\&' |
.br
    HttpString
.br
HttpUri = 
.br
    \&'*\&' |
.br
    {absoluteURI,
.br
     http | https,
.br
     Host :: HttpString,
.br
     Port :: \fBinet:port_number()\fR\& | undefined,
.br
     Path :: HttpString} |
.br
    {scheme, Scheme :: HttpString, HttpString} |
.br
    {abs_path, HttpString} |
.br
    HttpString
.br
HttpVersion = 
.br
    {Major :: integer() >= 0, Minor :: integer() >= 0}
.br
HttpField = 
.br
    \&'Cache-Control\&' |
.br
    \&'Connection\&' |
.br
    \&'Date\&' |
.br
    \&'Pragma\&' |
.br
    \&'Transfer-Encoding\&' |
.br
    \&'Upgrade\&' |
.br
    \&'Via\&' |
.br
    \&'Accept\&' |
.br
    \&'Accept-Charset\&' |
.br
    \&'Accept-Encoding\&' |
.br
    \&'Accept-Language\&' |
.br
    \&'Authorization\&' |
.br
    \&'From\&' |
.br
    \&'Host\&' |
.br
    \&'If-Modified-Since\&' |
.br
    \&'If-Match\&' |
.br
    \&'If-None-Match\&' |
.br
    \&'If-Range\&' |
.br
    \&'If-Unmodified-Since\&' |
.br
    \&'Max-Forwards\&' |
.br
    \&'Proxy-Authorization\&' |
.br
    \&'Range\&' |
.br
    \&'Referer\&' |
.br
    \&'User-Agent\&' |
.br
    \&'Age\&' |
.br
    \&'Location\&' |
