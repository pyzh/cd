PidPortFuncEvent = 
.br
    pid() |
.br
    port() |
.br
    new |
.br
    new_processes |
.br
    new_ports |
.br
    {Module, Function, Arity} |
.br
    on_load |
.br
    send |
.br
    \&'receive\&'
.br
Module = module()
.br
Function = atom()
.br
Arity = arity()
